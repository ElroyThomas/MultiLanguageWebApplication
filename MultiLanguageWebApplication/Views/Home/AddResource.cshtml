
@{
    ViewBag.Title = "AddResources";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Add Resources</h1>
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Resource Key</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Language</label>
                                <div class="col-sm-10">
                                    <select class="form-control" id="sltLanguage">
                                    </select>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Resource Value</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                    <button type="submit" class="btn btn-primary">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script type="text/javascript">
    $("document").ready(function () {
        ListLanguage();
        ListLanguageResource();
    });

    function ListLanguageResource() {

    }

    function ListLanguage() {
        $.ajax({
            type: "GET",
            url: "/MultiLanguage/SelectLanguageDetails",
            data: { languageID: 0 },
            contentType: "application/json",
            headers: {
                'Access-Control-Allow-Origin': '*',
            },
            error: function (err) {
                console.log(err, 'ajax ListLanguage error...');
            }
        }).done(function (response) {
            if (response != null && response.length > 0) {

                for (i = 0; i < response.length; i++) {
                    $('#sltLanguage')
                        .append($("<option></option>")
                        .attr("value", response[i].LanguageID)
                        .text(response[i].Language));
                }
            }
        });
    }
</script>